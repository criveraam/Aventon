<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWallPaper"
    tools:context="ti.developer.com.aventon.Activities.InitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avent"
            android:textColor="@color/colorWordFocus"
            android:textStyle="bold"
            android:textSize="58dp"
            android:layout_marginRight="-5dp"
            android:gravity="center" />
            <ImageView
                android:id="@+id/icon_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_directions_car"
                android:layout_gravity="bottom"
                android:layout_marginBottom="7dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n"
            android:layout_marginLeft="-5dp"
            android:textColor="@color/colorWordFocus"
            android:textStyle="bold"
            android:textSize="58dp"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/fondo">

    </LinearLayout>
</RelativeLayout>
